<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<vehicle type="pallet" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../shared/xml/schema/vehicle.xsd">
    <annotation>Copyright (C) GIANTS Software GmbH, All Rights Reserved.</annotation>
    <storeData>
        <name>Gold Safe</name>
        <image>pallets/goldSafe/store_goldSafe.dds</image>
        <brand>lizard</brand>
        <category>productionPoints</category>
        <financeCategory>OTHER</financeCategory>
        <allowLeasing>false</allowLeasing>
		<canBeSold>true</canBeSold>

        <price>1500</price>
        <vertexBufferMemoryUsage>50176</vertexBufferMemoryUsage>
        <indexBufferMemoryUsage>8448</indexBufferMemoryUsage>
        <textureMemoryUsage>1441792</textureMemoryUsage>
        <audioMemoryUsage>0</audioMemoryUsage>
        <instanceVertexBufferMemoryUsage>0</instanceVertexBufferMemoryUsage>
        <instanceIndexBufferMemoryUsage>0</instanceIndexBufferMemoryUsage>
    </storeData>
    <base>
        <typeDesc>$l10n_typeDesc_pallet</typeDesc>
        <filename>pallets/goldSafe/goldSafe.i3d</filename>
        <size width="1.6" length="1.2" height="1.1"/>
        <canBeReset>true</canBeReset>
        <components>
            <component centerOfMass="0 0.1 0" solverIterationCount="10" mass="60"/>
        </components>
        <showInVehicleMenu>true</showInVehicleMenu>
        <mapHotspot available="true"/>

    </base>
    <fillUnit>
        <fillUnitConfigurations>
            <fillUnitConfiguration>
                <fillUnits>
                    <fillUnit unitTextOverride="$l10n_unit_literShort" fillTypeCategories="PRODUCT" capacity="500" updateMass="false">
                        <exactFillRootNode node="exactFillRootNode"/>
                    </fillUnit>
                </fillUnits>
            </fillUnitConfiguration>
        </fillUnitConfigurations>
    </fillUnit>
    <fillVolume>
        <fillVolumeConfigurations>
            <fillVolumeConfiguration>
                <volumes>
                    <volume node="fillVolume" maxAllowedHeapAngle="10" fillUnitIndex="1"/>
                </volumes>
            </fillVolumeConfiguration>
        </fillVolumeConfigurations>
    </fillVolume>
    <dischargeable requiresTipOcclusionArea="false">
        <dischargeNode node="dischargeNode" emptySpeed="20000" fillUnitIndex="1" maxDistance="6" canStartDischargeAutomatically="true"/>
    </dischargeable>
    <dynamicMount triggerNode="dynamicMountTrigger"/>
    <fillTriggerVehicle triggerNode="fillTrigger" fillUnitIndex="1" litersPerSecond="5000"/>

    <tensionBeltObject>
        <meshNodes>
            <meshNode node="fillablePallet_vis"/>
        </meshNodes>
    </tensionBeltObject>
    <wearable wearDuration="480" workMultiplier="5" fieldMultiplier="2"/>

    <i3dMappings>
        <i3dMapping id="fillablePallet_component1" node="0>"/>
        <i3dMapping id="euroPalletVis" node="0>0"/>
        <i3dMapping id="pallet02_mat" node="0>0|0"/>
        <i3dMapping id="dynamicMountTrigger" node="0>1"/>
        <i3dMapping id="dischargeNode" node="0>2"/>
        <i3dMapping id="fillablePallet_vis" node="0>4"/>
        <i3dMapping id="exactFillRootNode" node="0>5|0"/>
        <i3dMapping id="fillTrigger" node="0>5|1"/>
        <i3dMapping id="fillVolume" node="0>6"/>
    </i3dMappings>
</vehicle>
