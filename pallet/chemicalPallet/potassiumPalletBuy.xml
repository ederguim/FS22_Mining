<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<vehicle type="pallet" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../shared/xml/schema/vehicle.xsd">
    <annotation>Copyright (C) GIANTS Software GmbH, All Rights Reserved.</annotation>

    <storeData>
        <name>Potassium Pallet</name>
        <image>fillPlanesTP/fruit_tp_hud/hud_fill_potassium.png</image>
		<functions>
            <function>Can be produced by a refinery from</function>
        </functions>
		<price>2900</price>
        <category>pallets</category>
        <brand>LIZARD</brand>
        <showInStore>true</showInStore>
        <canBeSold>false</canBeSold>
        <financeCategory>OTHER</financeCategory>
        <vertexBufferMemoryUsage>75264</vertexBufferMemoryUsage>
        <indexBufferMemoryUsage>14848</indexBufferMemoryUsage>
        <textureMemoryUsage>2031616</textureMemoryUsage>
        <instanceVertexBufferMemoryUsage>0</instanceVertexBufferMemoryUsage>
        <instanceIndexBufferMemoryUsage>0</instanceIndexBufferMemoryUsage>
        <audioMemoryUsage>0</audioMemoryUsage>
    </storeData>

    <base>
        <typeDesc>$l10n_typeDesc_pallet</typeDesc>
        <filename>pallets/chemicalPallet/chemicalPallet.i3d</filename>
        <size width="1.4" length="1" height="1.1" />
        <canBeReset>false</canBeReset>
        <components>
            <component centerOfMass="0 0.1 0" solverIterationCount="10" mass="100"/>
        </components>
        <showInVehicleMenu>false</showInVehicleMenu>
        <mapHotspot available="false" />
    </base>



     


    <animations>
        <animation name="fillAnimation">
            <part node="bakeryBox01" startTime="0.000" endTime="0.001" visibility="false" />
            <part node="bakeryBox01" startTime="0.001" endTime="1.000" visibility="true" />

            <sound template="palletsFillPlastic" startTime="0.001" direction="-1" pitchScale="0.8" />

            <part node="bakeryBox02" startTime="0.000" endTime="0.143" visibility="false" />
            <part node="bakeryBox02" startTime="0.143" endTime="1.000" visibility="true" />

            <sound template="palletsFillPlastic" startTime="0.143" direction="-1" pitchScale="0.8" />

            <part node="bakeryBox03" startTime="0.000" endTime="0.286" visibility="false" />
            <part node="bakeryBox03" startTime="0.286" endTime="1.000" visibility="true" />

            <sound template="palletsFillPlastic" startTime="0.286" direction="-1" pitchScale="0.8" />

            <part node="bakeryBox04" startTime="0.000" endTime="0.429" visibility="false" />
            <part node="bakeryBox04" startTime="0.429" endTime="1.000" visibility="true" />

            <sound template="palletsFillPlastic" startTime="0.429" direction="-1" pitchScale="0.8" />

            <part node="bakeryBox05" startTime="0.000" endTime="0.571" visibility="false" />
            <part node="bakeryBox05" startTime="0.571" endTime="1.000" visibility="true" />

            <sound template="palletsFillPlastic" startTime="0.571" direction="-1" pitchScale="0.8" />

            <part node="0>4|5" startTime="0.000" endTime="0.979" visibility="false" />
            <part node="0>4|5" startTime="0.979" endTime="1.000" visibility="true" />

            <sound template="palletsFillPlastic" startTime="0.999" direction="-1" pitchScale="0.8" />
		
            <part node="0>4|6" startTime="0.000" endTime="0.999" visibility="false" />
            <part node="0>4|6" startTime="0.999" endTime="1.000" visibility="true" />

            <sound template="palletsFillPlastic" startTime="0.999" direction="-1" pitchScale="0.8" />	
          
        </animation>
    </animations>

    <fillUnit>
        <fillUnitConfigurations>
            <fillUnitConfiguration>
                <fillUnits removeVehicleIfEmpty="true">
                    <fillUnit unitTextOverride="$l10n_unit_literShort" fillTypes="POTASSIUM" capacity="1000" startFillType="POTASSIUM" startFillLevel="1000" ignoreFillLimit="true" >
                        <fillLevelAnimation name="fillAnimation" resetOnEmpty="true" />
                    </fillUnit>
                </fillUnits>
            </fillUnitConfiguration>
        </fillUnitConfigurations>
    </fillUnit>

    <dischargeable requiresTipOcclusionArea="false">
        <dischargeNode node="dischargeNode" emptySpeed="200" fillUnitIndex="1" maxDistance="6" canStartDischargeAutomatically="true" playSound="false"/>
    </dischargeable>

    <dynamicMount triggerNode="dynamicMountTrigger" />

    <tensionBeltObject>
        <meshNodes>
            <meshNode node="bakeryBoxCol01"/>
            <meshNode node="bakeryBoxCol02"/>
            <meshNode node="bakeryBoxCol03"/>

        </meshNodes>
    </tensionBeltObject>
	
   <dynamicallyLoadedParts>
        <dynamicallyLoadedPart filename="pallet/chemicalPallet/decals_chemical.i3d" node="1" linkNode="decal" />

    </dynamicallyLoadedParts>	
	
	

    <i3dMappings>
        <i3dMapping id="bakeryBoxPallet_component1" node="0>" />
        <i3dMapping id="euroPalletVis" node="0>0" />
        <i3dMapping id="pallet02_mat" node="0>0|0" />
        <i3dMapping id="dynamicMountTrigger" node="0>1" />
        <i3dMapping id="dischargeNode" node="0>2" />
        <i3dMapping id="bakeryBox01" node="0>4|0" />
        <i3dMapping id="bakeryBox02" node="0>4|1" />
        <i3dMapping id="bakeryBox03" node="0>4|2" />
        <i3dMapping id="bakeryBox04" node="0>4|3" />
        <i3dMapping id="bakeryBox05" node="0>4|4" />

        <i3dMapping id="bakeryBoxCol01" node="0>5|0" />
        <i3dMapping id="bakeryBoxCol02" node="0>5|1" />
        <i3dMapping id="bakeryBoxCol03" node="0>5|2" />
        <i3dMapping id="decal" node="0>4|0|0" />

    </i3dMappings>
</vehicle>
