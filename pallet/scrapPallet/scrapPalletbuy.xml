<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<vehicle type="pallet" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../shared/xml/schema/vehicle.xsd">
    <annotation>Copyright (C) GIANTS Software GmbH, All Rights Reserved.</annotation>

    <storeData>
        <name>Scrap Car Pallet</name>
        <image>store_scrapPallet.png</image>
        <category>pallets</category>
        <functions>
            <function>Scrap this car to get materials</function>
        </functions>		
        <brand>LIZARD</brand>
        <showInStore>true</showInStore>
        <canBeSold>false</canBeSold>
        <brand>LIZARD</brand>
        <price>2400</price>	
        <financeCategory>OTHER</financeCategory>
        <vertexBufferMemoryUsage>58624</vertexBufferMemoryUsage>
        <indexBufferMemoryUsage>11520</indexBufferMemoryUsage>
        <textureMemoryUsage>2031616</textureMemoryUsage>
        <instanceVertexBufferMemoryUsage>0</instanceVertexBufferMemoryUsage>
        <instanceIndexBufferMemoryUsage>0</instanceIndexBufferMemoryUsage>
        <audioMemoryUsage>0</audioMemoryUsage>
    </storeData>

    <base>
        <typeDesc>$l10n_typeDesc_pallet</typeDesc>
        <filename>pallet/scrapPallet/scrapPallet.i3d</filename>
        <size width="2.8" length="1" height="4.8" />
        <canBeReset>false</canBeReset>
        <components>
            <component centerOfMass="0 0.1 0" solverIterationCount="10" mass="260"/>
        </components>
        <showInVehicleMenu>false</showInVehicleMenu>
        <mapHotspot available="false" />
    </base>

    <animations>
        <animation name="animation">
            <part node="furnitureStack" startTime="0.000" endTime="0.001" visibility="false" />
            <part node="furnitureStack" startTime="0.001" endTime="1.000" visibility="true" />

            <sound template="palletsFillPaper" startTime="0.999" direction="-1" pitchScale="0.9" />

        </animation>
    </animations>

    <fillUnit>
        <fillUnitConfigurations>
            <fillUnitConfiguration>
                <fillUnits removeVehicleIfEmpty="true">
                    <fillUnit unitTextOverride="$l10n_unit_literShort" fillTypes="SCRAP" capacity="5000" startFillType="SCRAP" startFillLevel="5000" ignoreFillLimit="true">
                        <fillLevelAnimation name="animation" resetOnEmpty="true" />
                    </fillUnit>
                </fillUnits>
            </fillUnitConfiguration>
        </fillUnitConfigurations>
    </fillUnit>

    <dischargeable requiresTipOcclusionArea="false">
        <dischargeNode node="dischargeNode" emptySpeed="5000" fillUnitIndex="1" maxDistance="6" canStartDischargeAutomatically="true" playSound="false"/>
    </dischargeable>

    <dynamicMount triggerNode="dynamicMountTrigger" />

    <tensionBeltObject>
        <meshNodes>
            <meshNode node="0>5|0"/>
            <meshNode node="0>5|1"/>

        </meshNodes>
    </tensionBeltObject>

    <i3dMappings>
        <i3dMapping id="furnitureStackPallet_component1" node="0>" />
        <i3dMapping id="euroPalletVis" node="0>0" />
        <i3dMapping id="pallet02_mat" node="0>0|0" />
        <i3dMapping id="dynamicMountTrigger" node="0>1" />
        <i3dMapping id="dischargeNode" node="0>2" />
        <i3dMapping id="furnitureStack" node="0>4|0" />
    </i3dMappings>
</vehicle>
